{
  "name": "chptr-antidote-plugin",
  "description": "An extension to Chptr to enable a smooth workflow with Antidote, a language-checker software.",
  "version": "0.0.0",
  "author": "spikying @spikying",
  "bugs": "https://github.com/spikying/chptr-antidote-plugin/issues",
  "dependencies": {
    "@oclif/command": "1.5.18",
    "@oclif/config": "1.13.2",
    "child_process": "1.0.2",
    "chptr": "file:../chptr",
    "cli-ux": "5.3.1",
    "save-dev": "2.0.0",
    "tslib": "1.10.0",
    "tslint-config-prettier": "1.18.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "1.22.0",
    "@oclif/plugin-help": "2.2.0",
    "@oclif/test": "1.2.4",
    "@oclif/tslint": "3.1.1",
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.7",
    "@types/node": "10.14.13",
    "chai": "4.2.0",
    "globby": "8.0.2",
    "mocha": "5.2.0",
    "nyc": "13.3.0",
    "rimraf": "2.6.3",
    "ts-node": "8.3.0",
    "tslint": "5.18.0",
    "typescript": "3.5.3"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/lib",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/spikying/chptr-antidote-plugin",
  "keywords": [
    "oclif-plugin"
  ],
  "license": "MIT",
  "oclif": {
    "commands": "./lib/commands",
    "bin": "chptr",
    "devPlugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "spikying/chptr-antidote-plugin",
  "scripts": {
    "postpack": "rimraf oclif.manifest.json",
    "posttest": "echo tslint -p test -t stylish",
    "prepack": "rimraf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
    "test": "echo nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md"
  }
}
